{
  "name": "gaia-builder-app",
  "version": "0.0.1",
  "description": "Gaia Hub Deployer",
  "main": "app/js/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "clean": "tsc -b --clean tsconfig.build.json",
    "build": "npm run clean && tsc -b tsconfig.build.json",
    "lint": "eslint --ext .ts ./src -f unix",
    "test": "npm run lint && cross-env TS_NODE_FILES=true nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zone117x/gaia-builder-app.git"
  },
  "keywords": [
    "gaia",
    "hub",
    "blockstack"
  ],
  "authors": [
    "Matthew Little <matthew@blockstack.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zone117x/gaia-builder-app/issues"
  },
  "homepage": "https://github.com/zone117x/gaia-builder-app#readme",
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.14.15",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "nyc": {
    "cache": false,
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register/transpile-only",
      "source-map-support/register"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
